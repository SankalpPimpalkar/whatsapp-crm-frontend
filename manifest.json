{
    "manifest_version": 3,
    "name": "Frontend CRM",
    "version": "1.0",
    "description": "A Chrome extension for Whatsapp CRM built with Vite and React.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "https://*/*"
    ],
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": ["https://web.whatsapp.com/*"],
            "js": [
                "content.js"
            ]
        }
    ]
}